<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.realityexpander.vinder">

    <application
            android:allowBackup="true"
            android:icon="@drawable/tinder_clone_logo"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.Vinder.NoActionBar">
        <activity
                android:name=".activities.UserInfoActivity"
                android:exported="false" />
        <!-- <activity android:name=".activities.ChatActivity"> -->
        <!-- </activity> -->
        <!-- <activity android:name=".activities.UserInfoActivity"> -->
        <!-- </activity> -->
        <activity
                android:name=".activities.SignupActivity"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="adjustResize" />
        <activity
                android:name=".activities.LoginActivity"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="adjustResize" />
        <activity
                android:name=".activities.VinderActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="adjustResize" />
        <activity
                android:name=".activities.StartupActivity"
                android:exported="true"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>